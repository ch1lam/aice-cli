{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "composite": true,
    "skipLibCheck": true,
    "paths": {
      "@anthropic-ai/sdk/resources/*": ["./node_modules/@anthropic-ai/sdk/resources/*"]
    }
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
